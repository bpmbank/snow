{
    "type": "object",
    "properties": {
        "address": {
            "type": "string",
            "required": true,
            "pattern": "^r\\w{25,40}$"
        },
        "amount": {
            "type": "string",
            "required": true,
            "pattern": "^\\d+(\\.\\d{1,17})?$"
        },
        "currency": {
            "type": "string",
            "required": true,
            "pattern": "^[A-Z]{3}$",
            "enum": ["BTC", "LTC", "XRP"]
        }
    }
}
