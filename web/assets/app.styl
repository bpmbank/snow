@import "../node_modules/nib/lib/nib/vendor.styl"
@import "loading.styl"
@import "admin.styl"

-animation()
    animation arguments
    -webkit-animation arguments
    -moz-animation arguments

body
    position relative
    padding-top 50px

footer {
    text-align: center;
}

.sidebar-nav {
    padding: 9px 0;
}

.create-order {
    @labelWidth: 80px;

    .control-group {
        .control-label {
            width: @labelWidth;
            text-align: left;
        }

        .controls {
            margin-left: @labelWidth + 30;
        }
    }
}

body:not(.is-logged-in)
    .container.market .buy-sell
        display: none

#balances a[href="#my/withdraw/XRP"] { display: none; }
#balances a[href="#my/deposit/XRP"] { display: none; }
#balances a[href^="#my/send"] { display: none; }


.dashboard
    .balances
        .balance
            td
                padding 15px 20px 10px 20px
        .available
            font-size 2em
            color #555
            text-align right

.dashboard
    .activities
        .activity
            .when
                width 120px
            .what
                word-wrap: break-word

.deposit-btc, .deposit-ltc
    .address
        font-size 1.6em
        padding-top 20px
        padding-bottom 20px
        text-align center
        border solid 1px #ccc
    .disclaimer
        font-size 0.85em

// Registration
.is-section-register, .is-section-login
    background: url('/img/registerbg.jpg')  no-repeat center center fixed;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;

    > .top
        display none

    footer, hr
        display none

.container.register, .container.login
    max-width: 550px
    padding: 19px 0px 29px 100px
    margin: 40px auto 20px
    border: 1px solid #e5e5e5
    border-radius: 5px
    box-shadow: 0 1px 2px rgba(0,0,0,.05)
    background-color #fff

    .register-form
        button
            width 300px

        input
            width 285px

        label
            font-weight bold

        h3
            margin-bottom 20px

    .help-inline
        max-width 220px
        font-size 90%
        margin-bottom 11px
        visibility hidden

    .email .help-inline
        visibility visible

.container.market
    .price
        .bid, .price, .ask
            text-align: right
    .summary
        height: 30px
        padding-top: 10px
        padding-bottom: 10px

.container.markets
    .item
        .last, .bid, .ask, .low, .high, .volume
            text-align right

body.is-logged-in
    footer
        .support
            display none

.verify-phone
    .call
        select[name="country"]
            max-width 170px
        button
            width 120px
    .code
        .code
            max-width 100px
            margin-right 15px
        button
            width 120px

.dashboard
    .withdraws.is-empty
        display none

@import "../controllers/apikeys/styles.styl"
@import "../controllers/home/styles.styl"
@import "../controllers/top/styles.styl"
@import "../controllers/simple/styles.styl"

.well
    border-radius 0px

.btn
    border-radius 2px
    background-image none

input[type="text"]
    border-radius 2px
